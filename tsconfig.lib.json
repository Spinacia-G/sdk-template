{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "playground",
    "public",
    "plugins",
    "lib"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
